<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />

  <title>{{ title }}</title>
  <meta name="description" content="{{ description }}" />
  <style>thead {color:green;} tbody {color:blue;text-align:center;} table,th,td {border:1px solid black; text-align:center;margin-top:50px;margin-left:100px;} </style>
</head>

<body>

<center>
<div id="nexusver">
  <p><font face=verdana size=5 color=orange>Nexus Switch Chassis id  :   {{ chassis_id }}</font></p>
  <p><font face=verdana size=5 color=orange> OS Version  :  {{ os_version }} </font></p>

</div>


<div id="nexusinterstatus">

{% if input_counter == 0 %}
<label><font size=4 color=coral>Number of Interfaces with Input Errors is : {{ input_counter }}</font></label><br>
{% else %}
<label><font size=4 color=brown>Number of Interfaces with Input Errors is : {{ input_counter }}</font></label><br>
{% for i in inerr_interface %}
<label><font size=3 color=black>{{ i }}</font></label><br>

{% endfor %}
{% endif %}

{% if output_counter == 0 %}
<label><font size=4 color=coral>Number of Interfaces with Output Errors is : {{ output_counter }}</font></label><br>
{% else %}
<label><font size=4 color=brown>Number of Interfaces with Ouput Errors is : {{ output_counter }}</font></label><br>
{% for j in outerr_interface %}
<label><font size=3 color=black>{{ j }}</font></label><br>

{% endfor %}
{% endif %}

</div>


</center>

</body>
</html>

